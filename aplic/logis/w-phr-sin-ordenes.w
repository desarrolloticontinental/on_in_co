&ANALYZE-SUSPEND _UIB-CODE-BLOCK _PROCEDURE adm-create-objects W-Win  _ADM-CREATE-OBJECTS
PROCEDURE adm-create-objects :
/*------------------------------------------------------------------------------
  Purpose:     Create handles for all SmartObjects used in this procedure.
               After SmartObjects are initialized, then SmartLinks are added.
  Parameters:  <none>
------------------------------------------------------------------------------*/
  DEFINE VARIABLE adm-current-page  AS INTEGER NO-UNDO.

  RUN get-attribute IN THIS-PROCEDURE ('Current-Page':U).
  ASSIGN adm-current-page = INTEGER(RETURN-VALUE).

  CASE adm-current-page: 

    WHEN 0 THEN DO:
       RUN init-object IN THIS-PROCEDURE (
             INPUT  'aplic/logis/b-phr-sin-ordenes.w':U ,
             INPUT  FRAME F-Main:HANDLE ,
             INPUT  'Layout = ,
                     SortBy-Case = NroDoc':U ,
             OUTPUT h_b-phr-sin-ordenes ).
       RUN set-position IN h_b-phr-sin-ordenes ( 2.62 , 2.00 ) NO-ERROR.
       RUN set-size IN h_b-phr-sin-ordenes ( 8.62 , 85.00 ) NO-ERROR.

       RUN init-object IN THIS-PROCEDURE (
             INPUT  'logis/b-phr-sin-ordenes-det.w':U ,
             INPUT  FRAME F-Main:HANDLE ,
             INPUT  'Layout = ':U ,
             OUTPUT h_b-phr-sin-ordenes-det ).
       RUN set-position IN h_b-phr-sin-ordenes-det ( 11.50 , 2.00 ) NO-ERROR.
       RUN set-size IN h_b-phr-sin-ordenes-det ( 14.00 , 140.00 ) NO-ERROR.

       /* Links to SmartBrowser h_b-phr-sin-ordenes-det. */
       RUN add-link IN adm-broker-hdl ( h_b-phr-sin-ordenes , 'Record':U , h_b-phr-sin-ordenes-det ).

       /* Adjust the tab order of the smart objects. */
       RUN adjust-tab-order IN adm-broker-hdl ( h_b-phr-sin-ordenes ,
             BUTTON-2:HANDLE IN FRAME F-Main , 'AFTER':U ).
       RUN adjust-tab-order IN adm-broker-hdl ( h_b-phr-sin-ordenes-det ,
             h_b-phr-sin-ordenes , 'AFTER':U ).
    END. /* Page 0 */

  END CASE.

END PROCEDURE.

