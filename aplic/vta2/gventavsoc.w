  ASSIGN
      FILL-IN-NroOcmp.
  /* consistencia */
  FIND lg-cocmp WHERE lg-cocmp.cdocia = s-codcia
      AND lg-cocmp.coddiv = "00000"
      AND lg-cocmp.coddoc = "O/C"
      AND lg-cocmp.nrodoc = FILL-IN-NroOcmp
      NO-LOCK NO-ERROR.
  IF NOT AVAILABLE lg-cocmp THEN DO:
      MESSAGE 'Orden de compra NO registrada' VIEW-AS ALERT-BOX ERROR.
      RETURN NO-APPLY.
  END.
  FIND lg-docmp WHERE lg-cocmp.cdocia = s-codcia
      AND lg-cocmp.coddiv = "00000"
      AND lg-cocmp.coddoc = "O/C"
      AND lg-cocmp.nrodoc = FILL-IN-NroOcmp
      AND lg-docmp.codmat = pCodMat
      NO-LOCK NO-ERROR.
