    n-item = n-item + 1.    
    DISPLAY 
        n-item 
        Detalle.codmat 
        Detalle.desmat 
        Detalle.desmar 
        Detalle.candes 
        Detalle.undbas 
        Detalle.CodUbi 
        WITH FRAME F-DetaFac.
    IF LAST-OF(Detalle.CodZona) THEN DO:
        x-Pagina = x-Pagina + 1.
        DOWN 1 WITH FRAME f-DetaFac.
        DISPLAY
            'Pagina: ' + STRING(x-Pagina, '99') + ' de ' + STRING(x-TotalPaginas, '99') @ Detalle.desmat
            WITH FRAME f-DetaFac.
        PAGE.
    END.
    IF LAST-OF(Detalle.codcia) THEN PAGE.
END.
OUTPUT CLOSE.

