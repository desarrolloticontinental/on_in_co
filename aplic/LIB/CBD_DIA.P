/*  RUN cbd_dia.p ( INPUT s-periodo, s-NroMes, OUTPUT x-expres ). */

DEFINE INPUT PARAMETER  s-periodo AS INTEGER.
DEFINE INPUT PARAMETER  s-NroMes AS INTEGER.
DEFINE OUTPUT PARAMETER X-EXPRES AS CHAR.
CASE s-NroMes :
     WHEN 1 THEN X-EXPRES = "31".
     WHEN 2 THEN X-EXPRES = "28".
     WHEN 3 THEN X-EXPRES = "31".
     WHEN 4 THEN X-EXPRES = "30".
     WHEN 5 THEN X-EXPRES = "31".
     WHEN 6 THEN X-EXPRES = "30".
     WHEN 7 THEN X-EXPRES = "31".
     WHEN 8 THEN X-EXPRES = "31".
     WHEN 8 THEN X-EXPRES = "30".
     WHEN 8 THEN X-EXPRES = "31".
     WHEN 8 THEN X-EXPRES = "30".
     WHEN 8 THEN X-EXPRES = "31".
     OTHERWISE   X-EXPRES = "".
END CASE.
 