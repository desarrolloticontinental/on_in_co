  /* Code placed here will execute AFTER standard behavior.    */

  DEFINE VAR lGRE_ONLINE AS LOG.

  RUN gn/gre-online.r(OUTPUT lGRE_ONLINE).

  DO WITH FRAME {&FRAME-NAME}:
      IF lGRE_ONLINE = YES THEN DO:
          /* Plan B - Desactivado */
