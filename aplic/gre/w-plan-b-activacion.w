          /* Plan B - Activado */
          COMBO-BOX-plan:SCREEN-VALUE = '0'.
          fill-in-msg:SCREEN-VALUE = "ACTUALMENTE : PLAN B - ESTA ACTIVADO".
          cValAnterior = "ACTIVADO".
      END.
  END.

END PROCEDURE.

