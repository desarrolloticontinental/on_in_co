&Scoped-define SELF-NAME Btn_OK
&ANALYZE-SUSPEND _UIB-CODE-BLOCK _CONTROL Btn_OK D-Dialog
ON CHOOSE OF Btn_OK IN FRAME D-Dialog /* OK */
DO:

    ASSIGN combo-box-plan.
    DEFINE VAR cTexto AS CHAR.

    cTexto = "ACTIVAR".
    IF combo-box-plan = 1 THEN ASSIGN cTexto = "DESACTIVAR".

    btn_ok:AUTO-GO = NO.
    MESSAGE 'Seguro de ' + cTexto + ' el PLAN B de la GRE?' VIEW-AS ALERT-BOX QUESTION
        BUTTONS YES-NO UPDATE rpta AS LOG.
    IF rpta = YES THEN DO:
        /* Grabar */
        DEFINE VAR cTabla AS CHAR INIT "CONFIG-GRE".
        DEFINE VAR cLlave_C1 AS CHAR INIT "ESTADO".
        DEFINE VAR cLlave_C2 AS CHAR INIT "ONLINE".
        
        FIND FIRST vtatabla WHERE vtatabla.codcia = 1 AND vtatabla.tabla = cTabla AND
                                        vtatabla.llave_c1 = cLlave_c1 AND vtatabla.llave_c2 = cLlave_c2 EXCLUSIVE-LOCK NO-ERROR.        
        IF AVAILABLE vtatabla THEN DO:
            ASSIGN vtatabla.valor[1] = combo-box-plan.
            RELEASE vtatabla.
            /* */           
        
          CREATE LogTabla.
          ASSIGN
            logtabla.codcia = 1
            logtabla.Dia = TODAY
            logtabla.Evento = 'PLAN-B'
            logtabla.Hora = STRING(TIME, 'HH:MM:SS')
            logtabla.Tabla = 'VTATABLA'
            logtabla.Usuario = USERID("DICTDB")
            logtabla.ValorLlave = "Valor anterior : " + cValAnterior + " valor nuevo : " + cTexto.
            logtabla.numid = pRCID.
        
         RELEASE LogTabla NO-ERROR. 

            /* */
            MESSAGE "Se procedio a " + cTexto + " el PLAN B de la GRE" VIEW-AS ALERT-BOX INFORMATION.
        END.
        ELSE DO:
            RELEASE vtatabla.
            MESSAGE "Hubo PROBLEAS al intentar " + cTexto + " el PLAN B de la GRE" VIEW-AS ALERT-BOX INFORMATION.
        END.

        /* */
       btn_ok:AUTO-GO = YES.
    END.

END.

