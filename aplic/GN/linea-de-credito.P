FOR EACH FacCPedi NO-LOCK WHERE
        FacCPedi.CodCia = S-CODCIA AND
        FacCPedi.CodDoc = "PED" AND
        FacCPedi.CodCli = pCodCli AND
        LOOKUP(FacCPedi.FlgEst, "X,P,W,WL") > 0 AND
