&ANALYZE-SUSPEND _UIB-CODE-BLOCK _PROCEDURE valida V-table-Win 
PROCEDURE valida :
/*------------------------------------------------------------------------------
  Purpose:     
  Parameters:  <none>
  Notes:       
------------------------------------------------------------------------------*/

DO WITH FRAME {&FRAME-NAME} :
    /* Consistencia de divisiones SOLO CUANDO ES DIFERENTE DE GENERAL */
    IF Clf_Agrupador.Codigo:SCREEN-VALUE <> "GENERAL" THEN DO:
        DEF BUFFER b-ClfAgrupador FOR Clf_Agrupador.
        DEF VAR k AS INTE NO-UNDO.
        RUN GET-ATTRIBUTE('ADM-NEW-RECORD').
        IF RETURN-VALUE = 'YES' THEN DO:
            DO k = 1 TO NUM-ENTRIES(Clf_Agrupador.Divisiones:SCREEN-VALUE):
                FOR EACH b-ClfAgrupador NO-LOCK WHERE b-ClfAgrupador.Codigo <> 'GENERAL':
                    IF LOOKUP(ENTRY(k,Clf_Agrupador.Divisiones:SCREEN-VALUE),b-ClfAgrupador.Divisiones) > 0 
                        THEN DO:
                        MESSAGE 'La división' ENTRY(k,Clf_Agrupador.Divisiones:SCREEN-VALUE)
                            'ya está registrado en el agrupador' b-ClfAgrupador.Codigo
                            VIEW-AS ALERT-BOX WARNING.
                        RETURN 'ADM-ERROR'.
                    END.
                END.
            END.
        END.
        ELSE DO:
            DO k = 1 TO NUM-ENTRIES(Clf_Agrupador.Divisiones:SCREEN-VALUE):
                FOR EACH b-ClfAgrupador NO-LOCK WHERE ROWID(Clf_Agrupador) <> ROWID(b-ClfAgrupador)
                    AND b-ClfAgrupador.Codigo <> 'GENERAL':
                    IF LOOKUP(ENTRY(k,Clf_Agrupador.Divisiones:SCREEN-VALUE),b-ClfAgrupador.Divisiones) > 0 
                        THEN DO:
                        MESSAGE 'La división' ENTRY(k,Clf_Agrupador.Divisiones:SCREEN-VALUE)
                            'ya está registrado en el agrupador' b-ClfAgrupador.Codigo
                            VIEW-AS ALERT-BOX WARNING.
                        RETURN 'ADM-ERROR'.
                    END.
                END.
            END.
        END.
    END.
END.

RETURN "OK".

END PROCEDURE.

